{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,

    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"]
    },

    "types": ["node"]
  },

  "include": [
    "./**/*.ts",
    "./shared/**/*.ts"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ]
}
